<Window x:Class="Preview.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="bdUnit Preview" Height="800" Width="1000">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Height="32" Margin="10,10,81,0" Name="EditorButtons" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0">
            <Button Height="23" Name="Paste" Content="Paste" Width="75" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
        <RichTextBox x:Name="InputEditor" AcceptsReturn="True" AcceptsTab="True" Grid.Row="1" Grid.Column="0" AllowDrop="True"  FontFamily="Calibri" FontSize="12" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0"></RichTextBox>
        <StackPanel Height="32" Margin="10,10,81,0" Name="PreviewButtons" Orientation="Horizontal" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1">
            <Button Height="23" Content="NUnit Preview" Name="NUnitPreview" Width="95" Margin="10px,0px,0px,0px" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Button Height="23" Content="XUnit Preview" Name="XUnitPreview" Width="95" Margin="10px,0px,0px,0px" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Button Height="23" Content="MbUnit Preview" Name="MbUnitPreview" Width="95" Margin="10px,0px,0px,0px" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        </StackPanel>
        <Frame x:Name="Preview" Grid.Column="1" ScrollViewer.CanContentScroll="True" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" x:FieldModifier="public"  BorderThickness="0"/>
    </Grid>
</Window>
