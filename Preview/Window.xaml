<Window x:Class="Preview.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:bdUnit.Preview.Controls"
    Title="bdUnit Preview" Height="Auto" MinHeight="500"  Width="Auto" MinWidth="800">
    <TabControl Margin="10" x:Name="tabControl" Grid.Row="1" TabStripPlacement="{Binding ElementName=listBox, Path=SelectedItem}" 
				VerticalContentAlignment="Center">
        <TabItem  Width="250" MaxWidth="250" MinWidth="250" Margin="0,0,0,0">
            <TabItem.Header>
                <TextBlock Text="Blank Page" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>
            </TabItem.Header>

            <Controls:bdUnitPreviewWindow></Controls:bdUnitPreviewWindow>

        </TabItem>
    </TabControl>
</Window>
